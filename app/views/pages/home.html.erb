                                  <%# Banner %>
<div class="main-banner">
  <div class="main-text">
    <h1>Templates Extension</h1>
    <p>All your templates. Anywhere.</p>
    <%= link_to 'Sign up', new_user_registration_path, class: 'sign-up' %>
  </div>
                                  <%# Image carousel %>
  <div class="image-carousel">
  <%# LEFT ARROW %>
    <button class="carousel-button button-left is-hidden">
      <i class="fa-solid fa-chevron-left"></i>
    </button>
      <div class="carousel-track-container">
        <ul class="carousel-track">
          <li class="carousel-slide current-slide">
            <%= image_tag "purple-background.jpg", class: 'carousel-image', height: 200, width: 400 %>
          </li>
          <li class="carousel-slide">
            <%= image_tag "purple-background.jpg", class: 'carousel-image', height: 200, width: 400 %>
          </li>
          <li class="carousel-slide">
            <%= image_tag "purple-background.jpg", class: 'carousel-image', height: 200, width: 400 %>
          </li>
        </ul>
      </div>
      <%# RIGHT ARROW %>
    <button class="carousel-button button-right">
      <i class="fa-solid fa-chevron-right"></i>
    </button>
    <%# NAV CIRCLES BELOW CAROUSEL %>
    <div class="carousel-nav">
      <button class="carousel-indicator current-slide"></button>
      <button class="carousel-indicator"></button>
      <button class="carousel-indicator"></button>
    </div>
  </div>
</div>
                                  <%# Center text %>
<%# <div class="secondary-content">
