
<%= simple_form_for template, data: {turbo_frame: '_top'}, html: { data: { controller: "auto-submit", "auto-submit-target": "form" } } do |f| %>
  <% if category %>
    <%= f.association :category, prompt: "Select your category", label: false, collection: current_user.categories, selected: category.id, class: "category-dropdown" %>
  <% else %>
    <%= f.association :category, prompt: "Select your category", label: false, collection: current_user.categories, class: "category-dropdown" %>
  <% end %>
  <%= f.input :title, label: false, placeholder: "Type your title" %>
  <%= f.input :content, as: :rich_text_area, placeholder: "Type your content here", input_html: { class: "content-input", }, label: false %>
  <%# <%= f.check_box, :completed, data: { action: 'autosave#save' } %>
  <%= f.submit "Save Template", class: "create" %>
<% end %>
