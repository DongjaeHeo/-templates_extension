<div id="template_menu" >

  <% categories.each do |category|  %>
    <div data-controller="toggle">

      <div data-action="click->toggle#open_list"><%= category.title %></div>
      <%= link_to 'New template', new_category_template_path(category), data: {turbo_frame: :workspace_content} %>
      <%= link_to 'Delete(category)', category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

      <div class="d-none" data-toggle-target="list">
        <% category.templates.each do |template| %>
          <ul>
            <li>
              <%= link_to edit_template_path(template), data: {turbo_frame: :workspace_content}  do %>
                <%= template.title %>
              <% end %>
            <br><%= link_to 'Delete', template_path(template), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
          </ul>
        <% end %>
      </div>

    <br>
    </div>
  <% end %>

</div>
