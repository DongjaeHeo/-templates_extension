<div id="template_menu" >

  <% categories.each do |category|  %>
    <div data-controller="toggle">
      <div class="d-flex justify-content-between align-items-center">
        <div data-action="click->toggle#open_list" style="cursor: pointer"><%= category.title %></div>
        <i class="fa-solid fa-circle-chevron-down" style="cursor: pointer" data-action="click->toggle#open_options"></i>
      </div>

      <div class="d-flex justify-content-end d-none" data-toggle-target="options">
        <%= link_to new_category_template_path(category), data: {turbo_frame: :workspace_content} do %>
          <i class="fa-solid fa-plus"></i>
        <% end %>
        <%= link_to category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash ml-3"></i>
        <% end %>
      </div>

      <div class="d-none" data-toggle-target="list">
        <% category.templates.each do |template| %>
          <ul>
            <li>
            <div class="d-flex justify-content-between gap-8">
              <div>
                <%= link_to edit_template_path(template), data: {turbo_frame: :workspace_content}  do %>
                  <div class="template-item"><%= template.title %></div>
                <% end %>
              </div>
              <br>
              <div>
                <%= link_to edit_template_path(template), data: {turbo_frame: :workspace_content}  do %>
                  <i class="fa-solid fa-pen"></i>
                <% end %>
                <%= link_to template_path(template), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                  <i class="fa-solid fa-trash ml-3"></i>
                <% end %>
              </div>
            </div>
            </li>
          </ul>
        <% end %>
      </div>

    <br>
    </div>
  <% end %>

</div>
