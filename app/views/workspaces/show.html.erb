<div class="text-center">
  <h1><%= current_user.first_name %>'s workspace</h1>
</div>
<div class="d-flex">
  <div class="min-vh-100 p-3" >
      <%= render 'workspaces/template_menu', categories: @categories %>
    <div >
      <%= render 'categories/form', category: @category%>
    </div>
  </div>
  <div style="background: white; padding: 40px;" class ="min-vh-100 vw-100">
    <%= turbo_frame_tag :workspace_content do %>
      <p>Initial content to display for workspace</p>
      <%= render 'templates/form', template: @template, category: nil %>
    <% end %>
  </div>
</div>
